<div "container">
  <div class="row">

    <div class="col-md-3">
      <%= render "books/list", user: @users, new_book: @new_book %>

     </div>

<div class="col-md-8 offset-md-1">

  <div class="table">
    <table>
      <tr>
        <td>Title</td>
        <td>Opinion</td>
      </tr>
    </table>
  </div>
  <div>

  </div>

  <div>

    <% @books.each do |book| %>
      <%= link_to book_path(book.user) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "minino-image-icon.jpg" %>
    <% end %>
    <%= link_to book.title, book_path(book.id) %>
    <%= book.body %>

  </div>

<% end %>

</div>

</div>

</div>