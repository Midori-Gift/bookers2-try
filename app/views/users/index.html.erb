
<p id="notice"></p>


<div class="container px-5 px-sm-0">

<div class="row">


<div class="col-md-3">

<%= render "books/list", user: @user, new_book: @new_book %>


</div>


    <div class="col-md-8 offset-md-1">

      <h2>Users</h2>

      <div class="table table-hover">

        <table>
          <tr>
            <td>image</td>
            <td>name</td>
          </tr>
        </table>

        <table>
          <% @users.each do |user| %>
          <tr>
            <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "minino-image-icon.jpg" %>
            </td>
            <td><%= user.name %></td>
            <td><%=link_to "Show", user_path(user.id) %></td>
          </tr>

          <% end %>

        </table>

      </div>


    </div>

  </div>


</div>















