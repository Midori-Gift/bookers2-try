      <%= render "books/list", user: @user, new_book: @new_book %>

    </div>



    <%= @books.each do |book| %>

      <div class="table">
        <table>
          <tr>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
        </table>
      </div>

      <div class="col-md-8 offset-md-1">

         <%= link_to book_path(book.id) do %>
