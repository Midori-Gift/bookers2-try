<div class="container px-5 px-sm-0 mt-4">
  <div class="row">
    <div class="col-md-3">


      <%= render "books/list", user: @user, new_book: @new_book %>

      </div>
      <div class="col-md-8 offset-md-1">

        <h2>Book detail</h2>


      <div class="table">
        <table>
          <tr>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-primary" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "destoroy", book_path(@book), class:"btn btn-danger", method: :delete, "data-confirm" => "お前マジか..？" %>

              <% end %>
            </td>
          </tr>
        </table>

      </div>


      </div>


  </div>
</div>