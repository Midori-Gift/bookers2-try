<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <div class="container">

          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          
          </header>
          
          

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">


          <span class="navbar-toggler-icon"></span>


          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <ul class="navbar-nav ml-auto">
              
              
            <% if user_signed_in? %>
                  <li>

                <%= link_to "Home", user_path(current_user.id), class:"fas fa-home nav-link text-light" %>

              </li>

              <li>

                <%= link_to "about", homes_about_path, class:"fas fa-link nav-link text-light" %>

              </li>


              <li>

                <%= link_to "log in", user_registration_path, class:"fas fa-user-plus nav-link text-light" %>

              </li>

              <li>

                <%= link_to "sign up", new_user_registration_path, class:"fas fa-sign-in-alt nav-link text-light"  %>

              </li>
              <% else %>
                  <li>
                    <%= link_to "新規登録", new_user_registration_path %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_user_session_path %>
                  </li>
            <% end %>


            </ul>


          </div>

        </div>


      </nav>

    <%= yield %>
  </body>
</html>



              